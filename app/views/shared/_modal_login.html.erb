  <!-- Modal Login -->
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn icon-btn btn-block signup-login-form__btn-xl btn-large space-1 btn-facebook btn-facebook-fresh js-facebook-auth" do %>
                <span class="icon-container">
                  <i class="fa fa-facebook"></i>
                </span>
                <span class="text-container">
                  <%= "Log in with #{OmniAuth::Utils.camelize(provider)}" %>
                </span>
              <% end %>
            <% end -%>
          <% end -%>
          <div class="text-center">or</div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%# simple_form_for(:user, :url => user_session_path) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <div class="flex-wrapper-sp-between">
              <div>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <div>
                <%= link_to "Forgot your password?", new_password_path(resource_name) %>
              </div>
              <% end -%>
            </div>
          </div>
          <%= f.button :submit, "Log in", class: "btn icon-btn btn-block signup-login-form__btn-xl btn-large space-1 btn-signup-yellow"%>

            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <hr>
            <div class="flex-wrapper-sp-between">
              <div>
                <span>Don't have an account?</span>
              </div>
              <div>
                <%= link_to "Sign up", "#", class: "btn-medium btn-medium-sm", data: { dismiss: "modal", toggle: "modal", target: "#signUpModal" } %>
              </div>
            </div>
            <% end -%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
